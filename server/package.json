{
  "name": "war2-server",
  "version": "0.0.1",
  "description": "War2 game server",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "build": "tsc && copyfiles -u 1 src/**/*.json5 build",
    "pack": "npx pkg --compress GZip ."
  },
  "author": "tcklpl",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@swc/core": "^1.3.82",
    "@swc/helpers": "^0.5.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "regenerator-runtime": "^0.14.0",
    "ts-node": "^10.9.1",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@types/express": "^4.17.20",
    "celebrate": "^15.0.1",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "bin": "build/index.js",
  "pkg": {
    "scripts": "build/**/*.js",
    "targets": [
      "node16-linux-x64",
      "node16-win-x64",
      "node16-macos-x64"
    ],
    "outputPath": "dist"
  }
}
