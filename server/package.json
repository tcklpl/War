    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "bin": "build/index.js",
  "pkg": {
    "scripts": "build/**/*.js",
    "targets": [
      "node16-linux-x64",
      "node16-win-x64",
      "node16-macos-x64"
    ],
    "outputPath": "dist"
  }
