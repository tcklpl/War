    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.8.7",
    "copyfiles": "^2.4.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-jetpack": "^5.1.0",
    "globals": "^15.10.0",
    "husky": "^9.1.6",
    "nodemon": "^3.1.7",
    "pkg": "^5.8.1",
    "prettier": "^3.3.3",
    "regenerator-runtime": "^0.14.1",
    "replace-in-file": "^8.2.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "celebrate": "^15.0.3",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
