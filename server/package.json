{
  "name": "war2-server",
  "version": "0.2.0",
  "description": "War2 Game Server",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.mjs",
    "start": "node scripts/start.mjs",
    "clean": "node scripts/clean.mjs",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "pack": "npx pkg --compress GZip ."
